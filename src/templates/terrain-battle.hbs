<div class="battle {{terrain}}">
  <div>
    <div class="battle-menu-main">NAME 
      {{#each character}}
        <li><button class="menu-select character{{id}} character" data-name="{{id}}">{{name}}</button></li>
      {{/each}}
    
    </div>
    <div class="battle-menu-main-stats">
    <table>
      <tr>
        <th>HP</th>
        <th>MP</th>
      </tr>
      {{#each character}}
        <tr>
          <td>{{currentHp}}/{{maxHp}}</td>
          <td>{{currentMp}}/{{maxMp}}</td>
        </tr>
      {{/each}}
      
    </table>
  </div>
</div>
{{#each character}}
  <span class="hero{{id}} battle-hero" data-name="{{name}}"></span>
{{/each}}


